<section class="hbsBody">
    <h1>Login</h1>
    {{#if err}}
        <p>{{message}}</p>
    {{/if}}
    <br/>
    <div>
        <form action="/login" method="post" id="login-form" class="formBody">
                <div id="usrname">
                    <label for="username">Username:</label>
                    <input type="text" name="username" id="username"></input>
                </div>
                <br/>
                <div id="pwd">
                    <label for="password">Password:</label>
                    <input type="password" name="password" id="password"></input>
                </div>   
                <br/>
                <input type="submit" value="Login" id="login"></input>
        </form>
        <br/>
        <div class="hprlink">
            <a href="/signup">Need to register? Click here to sign-up</a>
        </div>
    </div>
</section>